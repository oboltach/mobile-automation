{
  "name": "mobile-automation",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "wdio": "wdio",
    "test": "wdio wdio.conf.js",
    "test:ios": "wdio wdio.conf.js",
    "test:ios": "PLATFORM=ios wdio wdio.conf.js --suite smoke",
    "test:android": "PLATFORM=android wdio wdio.conf.js --suite android",
    "test:ios:all": "wdio wdio.conf.js",
    "test:ios:ci": "npm run test:ios:smoke || npm run test:ios:all",
    "test:android": "wdio wdio.conf.js --spec ./test/specs/android",
    "allure:generate": "allure generate --clean ./allure-results -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "clean:allure": "rm -rf ./allure-results ./allure-report",
    "report:fresh": "npm run clean:allure && wdio wdio.conf.js && allure generate --clean ./allure-results -o ./allure-report && allure open ./allure-report"
  },
  "engines": {
    "node": ">=20 <=22"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "allure-commandline": "^2.34.1",
    "appium": "^3.1.0",
    "appium-uiautomator2-driver": "^5.0.5",
    "appium-xcuitest-driver": "^10.2.1",
    "ios-uicatalog": "^3.8.0"
  }
}
